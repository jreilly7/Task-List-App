<!DOCTYPE html>
<html>
<head>
  <title>TaskListApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <h1> Task Lists App </h1>
  </header>

  <div id="primary">
   <% if flash[:message] %>
   <p class="flash-message"><%= flash[:message] %></p>
   <% end %>
  </div>

    <%= render "layouts/sidebar" %>

    <div class="main">
      <%= yield %>
    </div>





  <footer>
    <p>
      Task List Generator: Homework Assignment
    </p>

  

    <% if session[:user_id] %>
    <%= link_to 'Logout', logout_path %>
    <% else %>
    <%= link_to 'Login', login_path %>
    <% end %>

  </footer>
</body>
</html>
