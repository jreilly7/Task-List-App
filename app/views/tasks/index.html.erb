<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<h2> Pending Tasks </h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Is completed toggle</th>
      <th>Task list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.user %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
        <td><%= task.is_completed_toggle %></td>
        <td><%= task.task_list.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <h2> Completed Tasks </h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
        <th>Due date</th>
        <th>Is completed toggle</th>
        <th>Task list</th>
      </tr>
    </thead>

    <tbody>
      <% @completed_tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.priority %></td>
          <td><%= task.due_date %></td>
          <td><%= task.is_completed_toggle %></td>
          <td><%= task.task_list.name %></td>

        </tr>
      <% end %>
    </tbody>
  </table>



